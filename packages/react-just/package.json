{
  "name": "react-just",
  "type": "module",
  "files": [
    "dist"
  ],
  "exports": {
    "./vite": {
      "types": "./dist/vite.d.ts",
      "import": "./dist/vite.mjs",
      "require": "./dist/vite.cjs"
    },
    "./server": {
      "types": "./dist/server.d.ts",
      "import": "./dist/server.mjs",
      "require": "./dist/server.cjs"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "import": "./dist/client.mjs",
      "require": "./dist/client.cjs"
    }
  },
  "scripts": {
    "build": "rm -rf dist && rollup -c && pnpm build:types:client && pnpm build:types:server && pnpm build:types:vite",
    "build:types:client": "cp src/client/types.d.ts dist/client.d.ts",
    "build:types:server": "cp src/server/types.d.ts dist/server.d.ts",
    "build:types:vite": "cp src/vite/types.d.ts dist/vite.d.ts"
  },
  "dependencies": {
    "@vitejs/plugin-react": "^4.4.1",
    "rollup-plugin-react-use-client": "workspace:^"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.3",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.2",
    "@types/react": "^19.1.4",
    "@types/react-dom": "^19.1.5",
    "react-server-dom": "workspace:^",
    "rollup": "^4.40.2",
    "vite": "^6.3.5"
  },
  "peerDependencies": {
    "react": "~19.1",
    "react-dom": "~19.1",
    "vite": ">=6"
  }
}
