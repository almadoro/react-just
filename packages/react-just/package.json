{
  "name": "react-just",
  "type": "module",
  "description": "React Server Components without a framework. Powered by Vite",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/almadoro/react-just.git"
  },
  "bugs": {
    "url": "https://github.com/almadoro/react-just/issues"
  },
  "keywords": [
    "vite",
    "vite plugin",
    "plugin",
    "react",
    "react server components",
    "server components",
    "use client",
    "use server"
  ],
  "files": [
    "dist",
    "types"
  ],
  "exports": {
    "./vite": {
      "types": "./types/vite.d.ts",
      "import": "./dist/esm/vite.js",
      "require": "./dist/cjs/vite.js"
    },
    "./server": {
      "types": "./types/server.d.ts",
      "import": "./dist/esm/server.js",
      "require": "./dist/cjs/server.js"
    },
    "./server.node": {
      "types": "./types/server.node.d.ts",
      "import": "./dist/esm/server.node.js",
      "require": "./dist/cjs/server.node.js"
    },
    "./client": {
      "types": "./types/client.d.ts",
      "import": "./dist/esm/client.js",
      "require": "./dist/cjs/client.js"
    }
  },
  "scripts": {
    "build": "rm -rf dist && pnpm check && rollup -c",
    "check": "tsc --noEmit -p tsconfig.build.json"
  },
  "dependencies": {
    "@vitejs/plugin-react": "^4.4.1",
    "rollup-plugin-react-use-client": "workspace:^",
    "rollup-plugin-react-use-server": "workspace:^"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.3",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.2",
    "@types/react": "^19.1.4",
    "@types/react-dom": "^19.1.5",
    "react-server-dom": "workspace:^",
    "rollup": "^4.40.2",
    "vite": "^6.3.5"
  },
  "peerDependencies": {
    "react": "~19.1",
    "react-dom": "~19.1",
    "vite": ">=6"
  }
}
